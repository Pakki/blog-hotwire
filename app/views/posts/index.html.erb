<p style="color: green"><%= notice %></p>
<h1>Posts</h1>
<%= turbo_stream_from :posts %>
<%= turbo_frame_tag :posts do %>
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <div>
        <%= link_to "Show this post", post, data: { turbo: false } %>
      </div>
    <% end %>
  </div>
<% end %>
<%= link_to "New post", new_post_path %>
